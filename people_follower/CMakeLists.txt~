cmake_minimum_required(VERSION 2.8.3)
project(people_follower)

## Find catkin macros and libraries
## if COMPONENTS list like find_package(catkin REQUIRED COMPONENTS xyz)
## is used, also find other catkin packages
find_package(catkin REQUIRED COMPONENTS
  roscpp
  rospy
  std_msgs
)


catkin_package(
#  INCLUDE_DIRS include
#  LIBRARIES people_follower
#  CATKIN_DEPENDS roscpp rospy std_msgs
#  DEPENDS system_lib
)

###########
## Build ##
###########


include_directories(
  ${catkin_INCLUDE_DIRS}
)


## Declare a C++ executable
add_executable(simple_follower_kinect2 src/simple_follower_kinect2.cpp)
add_executable(simple_follower src/simple_follower.cpp)
add_executable(simple_follower_kinect2_pan src/simple_follower_kinect2_pan.cpp)
add_executable(simple_follower_kinect2_pan30 src/simple_follower_kinect2_pan30.cpp)
add_executable(simple_follower_kinect2_pan60 src/simple_follower_kinect2_pan60.cpp)
add_executable(generic_follower src/generic_follower.cpp)
add_executable(laser_person_detector src/laser_person_detector.cpp)


## Add cmake target dependencies of the executable
## same as for the library above
add_dependencies(simple_follower_kinect2 ${${PROJECT_NAME}_EXPORTED_TARGETS} ${catkin_EXPORTED_TARGETS})

## Specify libraries to link a library or executable target against
target_link_libraries(simple_follower_kinect2
   ${catkin_LIBRARIES}
 )
target_link_libraries(simple_follower
   ${catkin_LIBRARIES}
 )
target_link_libraries(simple_follower_kinect2_pan
   ${catkin_LIBRARIES}
 )
target_link_libraries(simple_follower_kinect2_pan30
   ${catkin_LIBRARIES}
 )
target_link_libraries(simple_follower_kinect2_pan60
   ${catkin_LIBRARIES}
 )
target_link_libraries(generic_follower
   ${catkin_LIBRARIES}
 )
target_link_libraries(laser_person_detector
   ${catkin_LIBRARIES}
 )

